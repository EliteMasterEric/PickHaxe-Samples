<?xml version="1.0" encoding="utf-8"?>
<pickhaxe>
  <mod
    id="madeinhaxe"
    version="0.4.0"
    parentPackage="com.elitemastereric.madeinhaxe"
    classPath="./src/"
    resourcePath="./resources/"
  />

  <mod-contact
    homepage="https://github.com/elitemastereric/pickhaxe-samples"
    email="elitemastereric@gmail.com"
    issues="https://github.com/elitemastereric/pickhaxe-samples/issues"
    sources="https://github.com/elitemastereric/pickhaxe-samples"
  />

  <mod-author name="EliteMasterEric" email="elitemastereric@gmail.com" />

  <!-- In Fabric-specific builds, this needs to point to the ModInitializer. -->
  <mod-entry-point 
    environment="*"
    value="MadeInHaxeMod" />

  <mod-metadata 
    name="Made In Haxe"
    description="This mod was written in the Haxe programming language!"
  />

  <!-- https://spdx.org/licenses/ -->
  <mod-license value="LGPLv3 License" />
</pickhaxe>